<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud"
    tools:context=".FormLogin">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/imepac"
        app:layout_constraintLeft_toLeft0f="parent"
        app:layout_constraintRight_toRight0f="parent"
        app:layout_constraintTop_toTop0f="parent"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="33dp" />

    <View
        android:id="@+id/containercomponens"
        style="@style/ContainerComponents"
        app:layout_constraintEnd_toEnd0f="parent"
        app:layout_constraintStart_toStart0f="parent"
        app:layout_constraintTop_toBottom0f="@id/logo"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="323dp" />

    <EditText
        android:id="@+id/edit_email_login"
        style="@style/Edit_Text"
        android:layout_width="315dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:drawableRight="@drawable/email"
        android:hint="E-mall."
        android:inputType="textEmailAddress"
        android:maxLength="25"
        app:layout_constraintEnd_toEndOf="@id/containercomponens"
        app:layout_constraintStart_toStartOf="@+id/containercomponens"
        app:layout_constraintTop_toTopOf="@id/containercomponens" />

    <!--button-->
    <EditText
        android:id="@+id/edit_senha_login"
        style="@style/Edit_Text"
        android:layout_width="319dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:drawableRight="@drawable/account_circle"
        android:hint="Senha"
        android:inputType="textPassword"
        android:maxLength="25"
        app:layout_constraintEnd_toEndOf="@id/containercomponens"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="@+id/containercomponens"
        app:layout_constraintTop_toBottomOf="@id/edit_email_login" />

    <androidx.appcompat.widget.AppCompatButton
       android:id="@+id/bt_entada"
        android:text="@string/entrar"
        style="@style/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_senha_login"
        />
</androidx.constraintlayout.widget.ConstraintLayout>